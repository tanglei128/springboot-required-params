<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tanglei.springbootstudydemo.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.tanglei.springbootstudydemo.entity.User">
        <result column="id" jdbcType="VARCHAR" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="pwd" jdbcType="VARCHAR" property="pwd" />
    </resultMap>

    <select id="getUserById" parameterType="String" resultType="com.tanglei.springbootstudydemo.entity.User">
        select * from user where id = #{id}
    </select>

</mapper>
